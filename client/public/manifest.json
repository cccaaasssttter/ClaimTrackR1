  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop view of ClaimsPro showing contract and claims management"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "375x812",
